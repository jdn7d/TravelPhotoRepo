<h1> Sign In </h1>

<%= form_tag '/signin' do  %>
   <%= label_tag :email %> 
   <%= email_field_tag :email %> <br> 
   
   <%= label_tag :username %> 
   <%= text_field_tag :username %> <br> 

   <%= label_tag :password %> 
   <%= password_field_tag :password %> <br>

   <%= submit_tag "Sign In" %> <br>
   <%= link_to "Create an account", new_user_path %> <br>

<% end %>
